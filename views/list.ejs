<div class="container">
    <a href="/post" class="btn btn-info btn-fill" role="button">Add Post</a>
    <br>
    <br>
    <div class="list-group">
  <% posts.forEach((post) => { %>
    <div class="post-preview">
    <a href="/update/<%= post.id %>" class="nounderline" >
      <h1 class="list-group-item-heading text-dark"><%= post.subject %></h2>
      <h3 class="list-group-item-text text-success"><%= post.message %></h3> 
    </a>
    <p class="post-meta">Posted on <%= post.createdAt.toDateString() %></p>     
    <hr>    
    </div>
    
  <% }) %>
    </div>
   
</div>